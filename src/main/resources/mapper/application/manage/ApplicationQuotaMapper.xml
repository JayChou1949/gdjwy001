<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.upd.hwcloud.dao.application.manage.ApplicationQuotaMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.upd.hwcloud.bean.entity.application.manage.ApplicationQuota">
        <id column="ID" property="id" />
        <result column="APPLY_UNIT" property="applyUnit" />
        <result column="APPLY_PERSON" property="applyPerson" />
        <result column="APPLY_POSITION" property="applyPosition" />
        <result column="APPLY_PHONE" property="applyPhone" />
        <result column="APPLY_TIME" property="applyTime" />
        <result column="APPLY_DESCRIPTION" property="applyDescription" />
        <result column="REF_FILES_ID" property="refFilesId" />
        <result column="APPLY_NUMBER" property="applyNumber" />
    </resultMap>

    <select id="getApplicationQuotaById"  resultMap="BaseResultMap">
            select * from TB_APPLICATION_QUOTA  where ID=#{id}
    </select>

    <select id="getApplicationQuotaList"  resultMap="BaseResultMap">

            select APPLY_NUMBER,APPLY_PERSON,APPLY_TIME from TB_APPLICATION_QUOTA
        <if test="applyPerson != null and applyPerson !=''">
            where APPLY_PERSON=#{applyPerson}
        </if>

    </select>

</mapper>
